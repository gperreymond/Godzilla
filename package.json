{
  "name": "Godzilla",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "start:server": "$(npm bin)/nodemon --config nodemon.json server",
    "test": "./tasks/test.sh",
    "docker:build": "./tasks/docker/build.sh"
  },
  "dependencies": {
    "@bennadel/circuit-breaker": "0.0.1",
    "boom": "7.2.0",
    "glob": "7.1.2",
    "glob-promise": "3.4.0",
    "hapi": "17.5.2",
    "hoek": "5.0.3",
    "nconf": "0.10.0",
    "rabbot": "2.1.0",
    "rabbus": "0.8.2",
    "uuid": "3.3.2",
    "winston": "3.0.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "mocha": "5.2.0",
    "mockery": "2.1.0",
    "nodemon": "1.18.3",
    "nyc": "12.0.2",
    "standard": "11.0.1"
  },
  "nyc": {
    "check-coverage": false,
    "per-file": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "report-dir": "coverage",
    "include": ["lib"],
    "exclude": [
      "server",
      "lib/**/*.test.js"
    ],
    "reporter": ["lcov", "text"]
  },
  "standard": {
    "ignore": [],
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach"
    ]
  }
}
